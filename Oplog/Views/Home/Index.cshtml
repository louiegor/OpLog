@{
    ViewBag.Title = "Home Page";
}


<div ng-controller="TableCtrl">
    <p><strong>Page:</strong> {{tableParams.page()}}
    <p><strong>Count per page:</strong> {{tableParams.count()}}

<p>Filter: <input class="form-control" type="text" ng-model="filter.$" /></p>
    <table ng-table="tableParams" class="table">
        <tr ng-repeat="char in $data">
            <td data-title="'Name'">
               <nobr><img width="24" height="24" ng-src="{{char.iconPath}}"/> {{char.name}} </nobr>
            </td>
            <td data-title="'Organization'">
                {{char.orgName}}
            </td>
            <td data-title="'Type'">
                {{char.orgType}}
            </td>
            <td>
                {{char.description}}
            </td>
            <td>
                {{char.stats}}
            </td>
        </tr>
    </table>
</div>

<div ng-controller="OrganizationCtrl">
    <h6>test 15 - Add Character</h6>
    <form ng-submit="addChara()">
        <label>Name</label> <input type="text" ng-model="charaName"/>
        <label>Organization</label>
        <select id="sel2" class="input-block-level" ng-model="orgId" ng-options="obj.id as obj.name for obj in listAllOrg.data"></select>
        <input type="submit"/>
    </form>

    <h6>test 14 - Get dropdown of all organizations</h6>
    <select id="sel" class="input-block-level" ng-model="list_category" ng-options="obj.id as obj.name for obj in listAllOrg.data"></select>
    <p>$scope.list_category: {{list_category}}</p>
    
    <h6>test 13 - Add Organization</h6>
    <form ng-submit="addOrg()">
        <input type="text" ng-model="orgName"/>
        <input type="submit"/>
    </form>
    

</div>

