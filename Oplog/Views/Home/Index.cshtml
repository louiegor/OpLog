<div ng-controller="TableCtrl">
    <p><strong>Page:</strong> {{tableParams.page()}}
    <p><strong>Count per page:</strong> {{tableParams.count()}}

<p>Filter: <input class="form-control" type="text" ng-model="filter.$" /></p>
    <table ng-table="tableParams" class="table">
        <tr ng-repeat="char in $data">
            <td data-title="'Name'">
               <nobr><img width="24" height="24" ng-src="{{char.iconPath}}"/> {{char.name}} </nobr>
            </td>
            <td data-title="'Organization'">
                {{char.orgName}}
            </td>
            <td data-title="'Type'">
                {{char.orgType}}
            </td>
            <td>
                {{char.description}}
            </td>
            <td>
                {{char.stats}}
            </td>
        </tr>
    </table>
</div>

<div ng-controller="OrganizationCtrl">
